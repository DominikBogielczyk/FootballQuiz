<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnShare"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_30"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/margin_30"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/blue"
        android:padding="@dimen/padding_10"
        android:text="@string/share"
        android:textSize="@dimen/textSizeBig"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnOnceMore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPoints" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_30"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginEnd="@dimen/margin_30"
        android:layout_marginBottom="@dimen/padding_10"
        android:backgroundTint="@color/red"
        android:padding="@dimen/padding_10"
        android:text="@string/close"
        android:textSize="@dimen/textSizeBig"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOnceMore" />

    <Button
        android:id="@+id/btnOnceMore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_30"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginEnd="@dimen/margin_30"
        android:layout_marginBottom="@dimen/padding_10"
        android:padding="@dimen/padding_10"
        android:text="@string/once_more"
        android:textSize="@dimen/textSizeBig"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnClose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShare" />

    <TextView
        android:id="@+id/textPoints"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_marginEnd="@dimen/margin_30"
        android:layout_marginBottom="@dimen/margin_150"
        android:background="@color/white"
        android:text="@string/result"
        android:textAlignment="center"
        android:textColor="@color/dark_green"
        android:textSize="@dimen/textSize60"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnShare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>