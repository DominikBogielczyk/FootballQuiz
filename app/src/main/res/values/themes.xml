<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FootballQuiz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_yellow</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MenuButtonVertical" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSizeBig</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btnBigHeight</item>
    </style>

    <style name="MenuButtonHorizontal" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSizeBig</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:layout_width">@dimen/btnBigWidth</item>
        <item name="android:layout_height">@dimen/btnBigHeight</item>
    </style>

</resources>